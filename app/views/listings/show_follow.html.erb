<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @listing.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @listing.name %></h3>
    <div class="pbig"><%= @listing.followers.count %> followers</div>
    <% if @followers.blank? %>
      <h4>No followers yet. Be the first to get the ball rolling!</h4>
    <% else %>
    	<% @followers.each do |user| %>
    		<ul class="users follow pbig"><%= user.name %></ul>
    	<% end %>
    <% end %>
  </div>
</div>